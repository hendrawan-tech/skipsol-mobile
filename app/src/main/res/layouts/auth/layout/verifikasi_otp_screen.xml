<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    tools:context=".auth.VerifikasiOTP">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_login"
                android:layout_width="match_parent"
                android:layout_height="194.44dp"
                android:src="@drawable/img_login" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/verifikasi_otp_material_card_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/img_login"
                android:layout_marginTop="2dp"
                android:clipToOutline="false"
                app:cardBackgroundColor="@color/white_color">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:src="@drawable/img_login_logo" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Verifikasi OTP"
                        android:textAppearance="@style/text_bold_primary"
                        android:textSize="24sp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Silahkan masukkan kode verifikasi yang telah kami
kirimkan ke e-mail anda. Jangan berikan kode verifikasi
kepada siapapun !"
                        android:textAppearance="@style/text_regular_secondary"
                        android:textSize="12sp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="Kode Verifikasi OTP"
                        android:textAppearance="@style/text_regular_font_primary" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/InputLayout_otp_OTP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/text_field_login_rounded"
                        app:boxBackgroundMode="none"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/EditText_otp_OTP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/golos_text_regular"
                            android:hint=""
                            android:inputType="number"
                            android:maxLines="1"
                            android:padding="15dp"
                            android:textColor="@color/font_primary_color"
                            android:textColorHint="@color/font_secondary_variant"
                            android:textSize="12sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/error_nimNotif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/golos_text_regular"
                        android:text="NIM yang anda masukkan tidak valid/tidak terdaftar"
                        android:textSize="12sp"
                        android:visibility="gone" />


                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/verifikasi_otp_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="99dp"
                        android:gravity="center"
                        android:text="00:32"
                        android:textAppearance="@style/text_regular_primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_verifikasi_otp"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="37dp"
                        android:backgroundTint="@color/primary_color"
                        android:text="SELANJUTNYA"
                        android:textAppearance="@style/text_bold_plain"
                        android:textColor="@color/white_color"
                        app:cornerRadius="12dp" />


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


        </RelativeLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
