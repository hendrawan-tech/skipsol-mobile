<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white_color"
    tools:context=".navbar.HomeMenu.InputJudulTA">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/appbar_input_judul_ta"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/toolbar_bottom_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Input Judul TA"
                    android:textAppearance="@style/text_bold_font_primary"
                    android:textSize="16sp" />

            </com.google.android.material.appbar.MaterialToolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/appbar_input_judul_ta"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Judul TA"
                    android:textAppearance="@style/text_semi_bold_font_primary" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/InputLayout_input_judul_ta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/text_field_round_border"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/EditText_input_judul_ta"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:fontFamily="@font/golos_text_regular"
                        android:hint=" "
                        android:maxLines="1"
                        android:padding="15dp"
                        android:textColor="@color/font_primary_color"
                        android:textColorHint="@color/font_secondary_variant"
                        android:textSize="12sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Abstrak TA"
                    android:textAppearance="@style/text_semi_bold_font_primary" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/InputLayout_abstrak_ta"
                    android:layout_width="match_parent"
                    android:layout_height="118dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/text_field_round_border"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/EditText_abstrak_ta"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:fontFamily="@font/golos_text_regular"
                        android:hint=" "
                        android:maxLines="1"
                        android:padding="15dp"
                        android:textColor="@color/font_primary_color"
                        android:textColorHint="@color/font_secondary_variant"
                        android:textSize="12sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Dosen Pembimbing 1"
                    android:textAppearance="@style/text_semi_bold_font_primary" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/InputLayout_dosen_pembimbing_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/text_field_round_border"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/EditText_dosen_pembimbing_1"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:fontFamily="@font/golos_text_regular"
                        android:hint=" "
                        android:maxLines="1"
                        android:padding="15dp"
                        android:textColor="@color/font_primary_color"
                        android:textColorHint="@color/font_secondary_variant"
                        android:textSize="12sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Dosen Pembimbing 2"
                    android:textAppearance="@style/text_semi_bold_font_primary" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/InputLayout_dosen_pembimbing_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/text_field_round_border"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/EditText_dosen_pembimbing_2"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:fontFamily="@font/golos_text_regular"
                        android:hint=" "
                        android:maxLines="1"
                        android:padding="15dp"
                        android:textColor="@color/font_primary_color"
                        android:textColorHint="@color/font_secondary_variant"
                        android:textSize="12sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Dosen Pembimbing 3"
                    android:textAppearance="@style/text_semi_bold_font_primary" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/InputLayout_dosen_pembimbing_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_field_round_border"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/EditText_dosen_pembimbing_3"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:fontFamily="@font/golos_text_regular"
                        android:hint=" "
                        android:maxLines="1"
                        android:padding="15dp"
                        android:textColor="@color/font_primary_color"
                        android:textColorHint="@color/font_secondary_variant"
                        android:textSize="12sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    app:cornerRadius="12dp"
                    android:layout_marginTop="57dp"
                    android:layout_marginBottom="30dp"
                    android:text="KIRIM"
                    style="@style/Widget.MaterialComponents.Button"
                    android:backgroundTint="@color/primary_color"
                    android:textAppearance="@style/text_bold_plain"
                    android:textColor="@color/white_color" />




            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>