<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    tools:context=".navbar.HomeMenu.FormPengajuan">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/appbar_form_pengajuan"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/toolbar_bottom_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/btn_back_form_pengajuan"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_back" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Form Pengajuan"
                android:textAppearance="@style/text_bold_font_primary"
                android:textSize="16sp" />

        </com.google.android.material.appbar.MaterialToolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appbar_form_pengajuan"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Judul TA Sebelumnya"
                android:textAppearance="@style/text_semi_bold_font_primary" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/InputLayout_judul_ta_sebelumnya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_field_round_border"
                app:boxBackgroundMode="none"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/EditText_judul_ta_sebelumnya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/golos_text_regular"
                    android:hint=" "
                    android:maxLines="1"
                    android:padding="15dp"
                    android:textColor="@color/font_primary_color"
                    android:textColorHint="@color/font_secondary_variant"
                    android:textSize="12sp" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/errJudulTaSebelumnya"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/text_regular_red"
                android:text="*Harap isi kolom teks yang kosong"
                />

            <com.google.android.material.textview.MaterialTextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Judul TA Baru"
                android:textAppearance="@style/text_semi_bold_font_primary" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/InputLayout_judul_ta_baru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_field_round_border"
                app:boxBackgroundMode="none"
                android:layout_marginBottom="15dp"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/EditText_judul_ta_baru"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/golos_text_regular"
                    android:hint=" "
                    android:maxLines="1"
                    android:padding="15dp"
                    android:textColor="@color/font_primary_color"
                    android:textColorHint="@color/font_secondary_variant"
                    android:textSize="12sp" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/errJudulTaBaru"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/text_regular_red"
                android:text="*Harap isi kolom teks yang kosong"
                />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Alasan Perubahan Judul"
                android:textAppearance="@style/text_semi_bold_font_primary" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/InputLayout_alasan_perubahan_judul"
                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:background="@drawable/text_field_round_border"
                app:boxBackgroundMode="none"
                app:hintEnabled="false">

<!--                <com.google.android.material.textfield.TextInputEditText-->
<!--                    android:id="@+id/EditText_alasan_perubahan_judul"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:fontFamily="@font/golos_text_regular"-->
<!--                    android:hint=" "-->
<!--                    android:maxLines="1"-->
<!--                    android:padding="15dp"-->
<!--                    android:textColor="@color/font_primary_color"-->
<!--                    android:textColorHint="@color/font_secondary_variant"-->
<!--                    android:textSize="12sp" />-->

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/EditText_alasan_perubahan_judul"
                    android:layout_width="match_parent"
                    android:layout_height="118dp"
                    android:fontFamily="@font/golos_text_regular"
                    android:gravity="top"
                    android:hint=" "
                    android:inputType="textMultiLine"
                    android:overScrollMode="always"
                    android:padding="15dp"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:textColor="@color/font_primary_color"
                    android:textColorHint="@color/font_secondary_variant"
                    android:textSize="12sp" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/errAlasanPerubahanJudul"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/text_regular_red"
                android:text="*Harap isi kolom teks yang kosong"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button"
                android:id="@+id/btn_kirim_form_pengajuan"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="320dp"
                android:backgroundTint="@color/primary_color"
                android:text="KIRIM"
                android:textAppearance="@style/text_bold_plain"
                android:textColor="@color/white_color"
                app:cornerRadius="12dp" />


        </LinearLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>