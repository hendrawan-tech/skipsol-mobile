<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    tools:context=".navbar.Profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/appbar_profile"
                android:layout_width="match_parent"
                android:layout_height="62dp"

                android:background="@drawable/toolbar_bottom_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Profile"
                    android:textAppearance="@style/text_bold_font_primary"
                    android:textSize="16sp" />

            </com.google.android.material.appbar.MaterialToolbar>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/appbar_profile"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_photo_profile"
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:src="@drawable/img_model_profile" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="57dp"
                    android:layout_marginTop="60dp"
                    android:src="@drawable/icon_profile_camera" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="107dp"
                android:paddingTop="92dp"
                android:paddingRight="75dp"
                android:paddingBottom="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/profile_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User lorem ipsum"
                    android:textAppearance="@style/text_bold_primary" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/profile_user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="loremipsum@gmail.com"
                    android:textAppearance="@style/text_regular_secondary"
                    android:textSize="12sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/profile_user_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Status skripsi"
                    android:textAppearance="@style/text_regular_secondary"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:id="@+id/view_with_border"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/appbar_profile"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="113dp"
                android:layout_marginRight="12dp"
                android:background="@color/border_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/appbar_profile"
                android:layout_marginTop="128dp"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Nama Lengkap"
                    android:textAppearance="@style/text_semi_bold_font_primary" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/InputLayout_profile_nama_lengkap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/text_field_round_border"

                    app:boxBackgroundMode="none"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/EditText_profile_nama_lengkap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/golos_text_regular"
                        android:hint=" "
                        android:maxLines="1"
                        android:padding="15dp"
                        android:textColor="@color/font_primary_color"
                        android:textColorHint="@color/font_secondary_variant"
                        android:textSize="12sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="NIM"
                    android:textAppearance="@style/text_semi_bold_font_primary" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/InputLayout_profile_nim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/text_field_round_border"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/EditText_profile_nim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/golos_text_regular"
                        android:hint=" "
                        android:maxLines="1"
                        android:padding="15dp"
                        android:textColor="@color/font_primary_color"
                        android:textColorHint="@color/font_secondary_variant"
                        android:textSize="12sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="No HP"
                    android:textAppearance="@style/text_semi_bold_font_primary" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/InputLayout_profile_no_hp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/text_field_round_border"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/EditText_profile_no_hp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/golos_text_regular"
                        android:hint=" "
                        android:maxLines="1"
                        android:padding="15dp"
                        android:textColor="@color/font_primary_color"
                        android:textColorHint="@color/font_secondary_variant"
                        android:textSize="12sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Status Skripsi"
                    android:textAppearance="@style/text_semi_bold_font_primary" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/InputLayout_profile_status_skripsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/text_field_round_border"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/EditText_profile_status_skripsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/golos_text_regular"
                        android:maxLines="1"
                        android:padding="15dp"
                        android:textColor="@color/font_primary_color"
                        android:textColorHint="@color/font_secondary_variant"
                        android:textSize="12sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Dosen Pembimbing"
                    android:textAppearance="@style/text_semi_bold_font_primary" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/InputLayout_profile_dosen_pembimbing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/text_field_round_border"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/EditText_profile_dosen_pembimbing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/golos_text_regular"
                        android:hint=" "
                        android:maxLines="1"
                        android:padding="15dp"
                        android:textColor="@color/font_primary_color"
                        android:textColorHint="@color/font_secondary_variant"
                        android:textSize="12sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Dosen Penguji"
                    android:textAppearance="@style/text_semi_bold_font_primary" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/InputLayout_profile_dosen_penguji"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/text_field_round_border"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/EditText_profile_dosen_penguji"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/golos_text_regular"
                        android:hint=" "
                        android:maxLines="1"
                        android:padding="15dp"
                        android:textColor="@color/font_primary_color"
                        android:textColorHint="@color/font_secondary_variant"
                        android:textSize="12sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_profile_logout"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="GANTI PASSWORD"
                    android:textAppearance="@style/text_bold_primary"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/primary_color" />

                <com.google.android.material.button.MaterialButton
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="35dp"
                    android:backgroundTint="@color/primary_color"
                    android:text="LOG OUT"
                    android:textAppearance="@style/text_bold_plain"
                    android:textColor="@color/white_color"
                    app:cornerRadius="12dp" />
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>