<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    tools:context=".navbar.Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/img_model_profile" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/user_profile"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Selamat Datang,"
                    android:textAppearance="@style/text_regular_secondary"
                    android:textSize="12sp"
                     />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/user_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textAppearance="@style/text_extra_bold_primary"
                    android:text="USER LOREM IPSUM"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="324dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/icon_notify_beranda" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/user_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_profile"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="12dp"
                app:cardBackgroundColor="@color/primary_color"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="15dp"
                        android:textAppearance="@style/text_regular_plain"
                        android:text="E41212178" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/text_bold_plain"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="15dp"
                        android:text="User Lorem Ipsum" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:textAppearance="@style/text_regular_plain"
                        android:layout_marginTop="15dp"
                        android:text="Teknik Informatika" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:textAppearance="@style/text_regular_plain"
                        android:layout_marginTop="5dp"
                        android:text="Politeknik Negeri Jember - Kampus Bondowoso" />

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginBottom="25dp"
                            android:textAppearance="@style/text_semi_bold_plain"
                            android:text="Status Skripsi :" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="25dp"
                            android:textAppearance="@style/text_semi_bold_plain"
                            android:text=" Lulus Revisi" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="end"
                    android:layout_marginLeft="186dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="23dp"
                    android:src="@drawable/img_home" />
            </com.google.android.material.card.MaterialCardView>


            <LinearLayout
                android:id="@+id/menu_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_card"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_card"
                    android:textSize="16sp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:text="Menu"
                    android:textAppearance="@style/text_medium_font_primary" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="2dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/btn_input_judul_ta"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                app:cardBackgroundColor="@color/white_color"
                                app:cardCornerRadius="8dp"
                                app:strokeColor="@color/primary_color"
                                app:strokeWidth="1dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/icon_input_judul_ta" />
                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Input Judul TA"
                                android:textAppearance="@style/text_regular_font_primary"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/btn_monitoring"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                app:cardBackgroundColor="@color/white_color"
                                app:cardCornerRadius="8dp"
                                app:strokeColor="@color/primary_color"
                                app:strokeWidth="1dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/icon_form_monitoring" />
                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Monitoring"
                                android:textAppearance="@style/text_regular_font_primary"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="19dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/btn_form_pengajuan"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                app:cardBackgroundColor="@color/white_color"
                                app:cardCornerRadius="8dp"
                                app:strokeColor="@color/primary_color"
                                app:strokeWidth="1dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/icon_form_pengajuan" />
                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Form Pengajuan"
                                android:textAppearance="@style/text_regular_font_primary"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="19dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/btn_update_status"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                app:cardBackgroundColor="@color/white_color"
                                app:cardCornerRadius="8dp"
                                app:strokeColor="@color/primary_color"
                                app:strokeWidth="1dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/icon_update_status" />
                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="Update Status"
                                android:textAppearance="@style/text_regular_font_primary"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="36dp"
                android:layout_below="@+id/menu_layout"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="15dp"
                            android:gravity="start"
                            android:text="Broadcast"
                            android:textAppearance="@style/text_medium_font_primary"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="21dp"
                            android:layout_marginRight="12dp"
                            android:gravity="end"
                            android:text="Lihat semua"
                            android:textAppearance="@style/text_regular_secondary"
                            android:textSize="12sp" />
                    </LinearLayout>


                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginRight="12dp"
                    app:cardBackgroundColor="@color/secondary_variant"
                    app:cardCornerRadius="12dp"
                    app:strokeColor="@color/border_color"
                    app:strokeWidth="2dp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="5dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            app:cardBackgroundColor="@color/primary_color"
                            app:cardCornerRadius="12dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginBottom="15dp"
                            android:orientation="vertical">

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"

                                android:text="Jadwal Bimbingan Luring"
                                android:textAppearance="@style/text_semi_bold_font_primary"
                                android:textSize="14sp" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="219dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Lorem Ipsum dolor sit amet, consectur adipiscing elit."
                                android:textAppearance="@style/text_regular_font_primary"
                                android:textSize="12sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Waktu : "
                                    android:textAppearance="@style/text_regular_font_primary"
                                    android:textSize="12sp" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="09.00 - 13.00 WIB"
                                    android:textAppearance="@style/text_regular_font_primary"
                                    android:textSize="12sp" />

                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>



