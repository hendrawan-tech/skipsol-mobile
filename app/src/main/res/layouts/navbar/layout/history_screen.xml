<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".navbar.RiwayatJudul">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">




        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/search_lecture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/rounded_border"
            app:boxBackgroundMode="none"
            android:layout_marginBottom="20dp"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/icon_search"
            app:endIconTint="@color/primary_color"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/search_judul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/golos_text_regular"
                android:hint="Cari judul ..."
                android:maxLines="1"
                android:textColor="@color/font_primary_color"
                android:paddingLeft="20dp"
                android:padding="15dp"
                android:textColorHint="@color/font_secondary_variant" />

        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:visibility="gone"
            android:layout_below="@id/search_lecture"
            android:layout_marginTop="50dp"
            android:id="@+id/riwayat_not_found"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/img_data_kosong" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KOSONG"
                android:textAllCaps="true"
                android:textAppearance="@style/text_bold_primary"
                android:textSize="16sp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Tidak ada riwayat judul yang dapat ditampilkan."
                android:textAlignment="center"
                android:textAppearance="@style/text_regular_font_primary"
                android:textSize="12sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/history_recycle_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_lecture" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>